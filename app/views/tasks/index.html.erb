<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" <% if task.completed %>
      checked
    <% end %>>
    <label class="form-check-label" for="flexCheckDefault">
    <%= link_to task.title, task_path(task) %>

    <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </label>
  </div>
<% end %>
<hr>
<%= link_to '+ Add a new task', tasks_new_path %>
