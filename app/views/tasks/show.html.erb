<div class="container" >
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <p>Status: <% if @task.completed %>
    Completed
  <% else %>
    Incomplete
  <% end %></p>

  <%= link_to "Update Task", edit_task_path(@task) %>
  <br>
  <%= link_to "< Back", tasks_path %>
  <br>
  <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</div>
